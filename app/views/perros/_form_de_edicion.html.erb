<%= form_for(perro, remote: true, html: { method: :put }) do |f| %>
    <%= hidden_field_tag :id, perro.id %>
  <div class="mb-3">
    <%= f.label :nombre, class: "form-label" %>
    <%= f.text_field :nombre, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= f.label :fecha_nacimiento, class: "form-label" %>
    <%= f.date_field :fecha_nacimiento, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= f.label :sexo, class: "form-label" %>
    <%= f.select :sexo, %w[Macho Hembra], {}, class: "form-control" %>
  </div>

  <!-- Otros campos segÃºn sea necesario -->

  <div class="text-center">
    <%= f.submit "Actualizar", class: "btn btn-primary btn-block" %>
  </div>
<% end %>
