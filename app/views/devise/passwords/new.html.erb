<!-- formulario de restablecimiento de contraseña (new.html.erb) -->

<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6 col-lg-5">
      <div class="card">
        <div class="card-body p-4">
          <h2 class="text-center mb-4">¿Olvidaste tu contraseña?</h2>
          <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "user-form" }) do |f| %>
            <%= render "devise/shared/error_messages", resource: resource %>
            <div class="mb-3">
              <%= f.label :email, "Correo Electrónico", class: "form-label" %><br />
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
            </div>
            <div class="text-center">
              <%= f.submit "Enviar instrucciones para restablecer la contraseña", class: "btn btn-primary btn-block" %>
            </div>
          <% end %>
          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</div>
