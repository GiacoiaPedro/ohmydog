<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6 col-lg-5">
      <div class="card">
        <div class="card-body p-4">

          <h2 class="text-center mb-4">Iniciar Sesión</h2>

          <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "user-form" }) do |f| %>
            <div class="mb-3">
            <%= f.label :dni, "DNI", class: "form-label" %>
            <%= f.text_field :dni, autofocus: true, autocomplete: "dni", class: "form-control", pattern: "\\d*", inputmode: "numeric", title: "Ingrese solo números" %>
            </div>

            <div class="mb-3">
              <%= f.label :password, "Contraseña", class: "form-label" %>
              <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
            </div>
            
            <div class="text-center">
              <%= f.submit "Ingresar", class: "btn btn-primary btn-block" %>
            </div>
          <% end %>

          <br</br>

          <%= render "devise/shared/links" %>

          <!-- Lema adicional -->
          <p class="mt-4 text-center">
            Si no contás con un usuario, acercate a la veterinaria para que te registremos :)
          </p>

        </div>
      </div>
    </div>
  </div>
</div>
